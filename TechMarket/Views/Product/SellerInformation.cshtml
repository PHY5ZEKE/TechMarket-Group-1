


<div class="container">
    <div class="main-body">
        <div class="row gutters-sm">

            <div class="col-md-4 mb-3">
                <div class="card">
                    <div class="card-body">
                        <div class="d-flex flex-column align-items-center text-center">
                            <img src="~/@Model.SellerPfp" alt="Profile Picture" class="rounded-circle" width="150">
                            <div class="mt-3">
                                <h4>@Model.Seller</h4>
                                <p class="text-secondary mb-1">@Model.SellerFName @Model.SellerLName</p>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="mt-3">
                    <a class="btn btn-primary" href="#" onclick="showIdPictureModal()">View ID</a>
                </div>
            </div>


            <div class="col-md-8">
                <div class="card mb-3">
                    <div class="card-body">

                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">First Name</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                @Model.SellerFName
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Last Name</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                @Model.SellerLName
                            </div>
                        </div>

                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Email</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                @Model.SellerEmail
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <h6 class="mb-0">Contact</h6>
                            </div>
                            <div class="col-sm-9 text-secondary">
                                @Model.SellerContact
                            </div>
                        </div>
                        <hr>
                        
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>

<div class="modal" tabindex="-1" role="dialog" id="idPictureModal">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">ID Picture</h5>
                <button type="button" class="close" onclick="closeIdPictureModal()" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <img src="~/@Model.SellerID" alt="ID Picture" class="img-fluid">
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" onclick="closeIdPictureModal()">Close</button>
            </div>
        </div>
    </div>
</div>

<script>
    function showIdPictureModal() {
        $('#idPictureModal').modal('show');
    }
    function closeIdPictureModal() {
        $('#idPictureModal').modal('hide');
    }
</script>
