<head>
    <!--css-->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/css/table.css" asp-append-version="true" />
</head>
<h2>Your Purchases</h2>

@if (Model.Count > 0)
{
    <table cellpadding="0" cellspacing="0" border="0">
        <thead>
            <tr>
                <th>Product Name</th>
                <th>Image</th>
                <th>Description</th>
                <th>Price</th>
                <th>Purchase Date</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var purchase in Model)
            {
                <tr>
                    <td>@purchase.ProductName</td>
                    <td>
                        @* Display the product image, adjust the path accordingly *@
                        <img src="~/@purchase.ProductImageURL" alt="Product Image" style="max-width: 100px; max-height: 100px;" />
                    </td>
                    <td>@purchase.ProductDescription</td>
                    <td>@purchase.ProductPrice</td>
                    <td>@purchase.PurchaseDate</td>
                    <td>
                        <a href="@Url.Action("ShowDetailsPurchases", "Product", new { id = purchase.ProductId })" class="btn btn-primary">Show Details</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No purchases available.</p>
}
