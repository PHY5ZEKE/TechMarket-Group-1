@model TechMarket.ViewModels.RegisterViewModel

<link rel="stylesheet" href="~/css/Register.css" asp-append-version="true" />
<link href="https://fonts.googleapis.com/css?family=Poppins" rel="stylesheet">
<style>
    .wrapper {
        margin-right: 400px;
    }
</style>

<div class="wrapper">
    <h1>Registration</h1>

    <form asp-action="Register" enctype="multipart/form-data" method="post">
        <div class="input-box">
            <div class="input-group">
                <label asp-for="FirstName">First Name</label>
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>

            <div class="input-group">
                <label asp-for="LastName">Last Name</label>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
        </div>
        <div class="input-box">
            <label asp-for="Email">Email</label>
            <input asp-for="Email" class="form-control" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="input-box">
            <label asp-for="UserName">Username</label>
            <input asp-for="UserName" class="form-control" />
            <span asp-validation-for="UserName" class="text-danger"></span>
        </div>
        <div class="input-box">
            <div class="input-group">
                <label asp-for="Password">Password</label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="input-group">
                <label asp-for="ConfirmPassword">Confirm Password</label>
                <input asp-for="ConfirmPassword" class="form-control" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
        </div>
        <div class="input-box">
            <label asp-for="BuildingNumber">Building/House Number</label>
            <input asp-for="BuildingNumber" class="form-control" />
            <span asp-validation-for="BuildingNumber" class="text-danger"></span>

            <label asp-for="StreetName">Street Name</label>
            <input asp-for="StreetName" class="form-control" />
            <span asp-validation-for="StreetName" class="text-danger"></span>

            <label asp-for="Barangay">Barangay</label>
            <input asp-for="Barangay" class="form-control" />
            <span asp-validation-for="Barangay" class="text-danger"></span>

            <label asp-for="CityOrMunicipality">City/Municipality</label>
            <input asp-for="CityOrMunicipality" class="form-control" />
            <span asp-validation-for="CityOrMunicipality" class="text-danger"></span>

            <label asp-for="Province">Province</label>
            <input asp-for="Province" class="form-control" />
            <span asp-validation-for="Province" class="text-danger"></span>

            <label asp-for="PostalCode">Postal Code</label>
            <input asp-for="PostalCode" class="form-control" />
            <span asp-validation-for="PostalCode" class="text-danger"></span>
        </div>
        <div class="input-box">
            <label asp-for="Birthday">Birthdate</label>
            <input asp-for="Birthday" class="form-control" />
            <span asp-validation-for="Birthday" class="text-danger"></span>
        </div>
        <div class="input-box">
            <label asp-for="Phone">Contact</label>
            <input asp-for="Phone" class="form-control" />
            <span asp-validation-for="Phone" class="text-danger"></span>
        </div>
        <div class="input-box">
            <label asp-for="ProfilePicture">Profile Picture</label>
            <input asp-for="ProfilePicture" type="file" class="form-control" />
            <span asp-validation-for="ProfilePicture" class="text-danger"></span>
        </div>

        <div class="input-box">
            <label asp-for="IdPicture">ID Picture</label>
            <input asp-for="IdPicture" type="file" class="form-control" />
            <span asp-validation-for="IdPicture" class="text-danger"></span>
        </div>
        <div class="input-box button">
            <input type="submit" value="Register" class="btn btn-primary rounded-pill">
        </div>

        

        <div asp-validation-summary="All" class="text-danger"></div>
    </form>
</div>
