@model TechMarket.Data.User

<style>
    body {
        margin-left: 220px;
        padding: 0;
        background-color: #f8f9fa;
    }

    h1 {
        color: #007bff;
        font-weight: bold;
        margin-bottom: 20px;
    }

    form {
        max-width: 600px;
        margin: 0 auto;
    }

    .form-group {
        margin-bottom: 20px;
    }

    label {
        font-weight: bold;
    }

    input[type="file"],
    input[type="password"] {
        width: 100%;
        padding: 12px; /* Adjusted padding for input fields */
        border: 1px solid #ccc;
        border-radius: 4px;
        margin-top: 5px;
        box-sizing: border-box; /* Added to include padding in width calculation */
    }

    button {
        padding: 15px; /* Increased padding for buttons */
        cursor: pointer;
        border: none;
        border-radius: 4px;
        font-weight: bold;
    }

    .btn-primary {
        background-color: #007bff;
        color: #ffffff;
        margin-right: 10px;
    }

    .btn-secondary {
        background-color: #6c757d;
        color: #ffffff;
    }
</style>
<center>
    <h1>Edit Account</h1>
</center>

<form asp-action="EditUser" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label asp-for="Email">Email</label>
        <input asp-for="Email" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Phone">Contact</label>
        <input asp-for="Phone" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="ProfilePicture" class="control-label">Profile Picture</label>
        <input asp-for="ProfilePicture" type="file" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="PasswordHash">New Password</label>
        <input asp-for="PasswordHash" type="password" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="ConfirmPassword">Confirm Password</label>
        <input asp-for="ConfirmPassword" type="password" class="form-control" />
    </div>

    <div>
        <button type="button" class="btn btn-secondary" onclick="history.back();">Cancel</button>
        <button type="submit" class="btn btn-primary">Save</button>
    </div>
</form>
