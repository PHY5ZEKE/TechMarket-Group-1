@{
}
@model List<TechMarket.Data.User>
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css">
<link rel="stylesheet" href="~/css/table.css" asp-append-version="true" />
<h1>Accounts</h1>


<table>
    <thead>
    <tr>
        <th>Id</th>
        <th>Name</th>
        <th>Email</th>
        <th>Username</th>
        <th>Address</th>
        <th>Birthdate</th>
        <th>Contact Number</th>
        <th>Show Details</th>
        <th>Update</th>
        <th>Delete</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var user in Model)
    {
        <tr>
           
            <td>@user.Id</td>
            <td>@user.FirstName @user.LastName</td>
            <td>@user.Email</td>
            <td>@user.UserName</td>
            <td>@user.Address</td>
            <td>@user.Birthday</td>
            <td>@user.Phone</td>
          
            <td>
                <center><a class="btn btn-primary" asp-action="ShowDetails" asp-route-id="@user.Id">Show Details</a></center>
            </td>
            <td>
                <center><a class="btn btn-primary" asp-action="EditAccount" asp-route-id="@user.Id">Edit</a></center>
            </td>
            <td>
                <center><a class="btn btn-danger" asp-action="DeleteAccount" asp-route-id="@user.Id">Delete</a></center>
            </td>
        </tr>
    }
    </tbody>
</table>
