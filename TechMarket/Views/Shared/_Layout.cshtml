@using System.Security.Claims
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TechMarket</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/Register.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/Account.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/TechMarket.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/sidebar.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm box-shadow mb-3 custom-navbar fixed-top">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="~/logo.png" alt="TechMarket Logo" />
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">


                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-action="Logout" asp-controller="Account">Logout</a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-action="Login" asp-controller="Account">Login</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-action="Register" asp-controller="Account">Register</a>
                            </li>
                        }


                    </ul>
                </div>
            </div>
        </nav>
        @if (User.Identity.IsAuthenticated)
        {
            <nav class="sidebar">
                <div class="menu_content">
                    <ul class="menu_items">
                        <div class="menu_title menu_dahsboard"></div>
                        <!-- start -->
                        <li class="item">
                            <div href="#" class="nav_link submenu_item">
                                <span class="navlink_icon">
                                    <i class='bx bx-book-add'></i>
                                </span>
                                <a class="navlink" asp-controller="Product" asp-action="AddProduct">Add Product</a>
                            </div>
                        </li>
                        <!-- end -->
                        <!-- start -->
                        <li class="item">
                            <div href="#" class="nav_link submenu_item">
                                <span class="navlink_icon">
                                    <i class="bx bx-grid-alt"></i>
                                </span>
                                <a class="navlink" asp-area="" asp-controller="Product" asp-action="Index">Main</a>
                            </div>
                        </li>
                        <!-- end -->
                        <!-- start -->
                        <li class="item">
                            <div href="#" class="nav_link submenu_item">
                                <span class="navlink_icon">
                                    <i class='bx bx-category-alt'></i>
                                </span>
                                <span class="navlink">Category</span>
                                <i class="bx bx-chevron-right arrow-left"></i>
                            </div>

                            <ul class="menu_items submenu">
                                <a class="nav_link sublink" asp-controller="Product" asp-action="Smartphones">Smartphones</a>
                                <a class="nav_link sublink" asp-controller="Product" asp-action="Computers">Computers</a>
                                <a class="nav_link sublink" asp-controller="Product" asp-action="Audio">Audio</a>
                                <a class="nav_link sublink" asp-controller="Product" asp-action="Cameras">Cameras</a>
                                <a class="nav_link sublink" asp-controller="Product" asp-action="Accessories">Accessories</a>
                                <a class="nav_link sublink" asp-controller="Product" asp-action="Misc">Misc</a>
                            </ul>
                        </li>
                        <!-- end -->
                        <!-- start -->
                        @if (User.FindFirstValue(ClaimTypes.NameIdentifier) == "ea68465f-1dba-4e0b-96db-1aee74bc4743")
                        {
                            <li class="item">
                                <div href="#" class="nav_link submenu_item">
                                    <span class="navlink_icon">
                                        <i class='bx bx-cog'></i>
                                    </span>
                                    <span class="navlink">Admin Privileges</span>
                                    <i class="bx bx-chevron-right arrow-left"></i>
                                </div>

                                <ul class="menu_items submenu">

                                    <a class="nav_link sublink" asp-action="Index" asp-controller="Account">User Accounts</a>
                                    <a class="nav_link sublink" asp-action="AdminProductView" asp-controller="Product">Uploaded Products</a>
                                </ul>
                            </li>
                        }
                        <!-- end -->
                        <!-- start -->
                        <li class="item">
                            <div href="#" class="nav_link submenu_item">
                                <span class="navlink_icon">
                                    <i class='bx bx-user-circle'></i>
                                </span>
                                <span class="navlink">My Account</span>
                                <i class="bx bx-chevron-right arrow-left"></i>
                            </div>

                            <ul class="menu_items submenu">
                                <a class="nav_link sublink" asp-area="" asp-action="Profile" asp-controller="Account">Profile</a>
                                <a class="nav_link sublink" asp-controller="Product" asp-action="Listing">My Listings</a>
                                <a class="nav_link sublink" asp-action="Purchases" asp-controller="Product">My Purchases</a>
                                <a class="nav_link sublink" asp-action="Sold" asp-controller="Product">Sold</a>
                                <a class="nav_link sublink" asp-action="ToReceive" asp-controller="Product">To Receive</a>
                                <a class="nav_link sublink" asp-action="ToShip" asp-controller="Product">To Ship</a>
                            </ul>
                        </li>
                        <!-- end -->
                    </ul>

                </div>
            </nav>
        }

    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    @*  <footer class="border-top footer text-muted">
    <div class="container">
    &copy; 2023 - TechMarket - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
    </div>
    </footer> *@
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/sidebar.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
